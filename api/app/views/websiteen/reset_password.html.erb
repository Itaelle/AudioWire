<body>
<div id="main">

    <!-- Header -->
    <div id="header">

        <!-- Your logo -->
        <h1 id="logo"><a href="/"><h2><span>Audio</span>Wire</h2></a></h1>
        <hr class="noscreen" />        

        <!-- Your slogan -->
        <div id="slogan">&quot;Software that Knows you!&quot;</div>
        <hr class="noscreen" />        
        
        <!-- Hidden navigation -->
        <p class="noscreen noprint"><em>Quick links: <a href="#content">content</a>, <a href="#nav">navigation</a>.</em></p>
        <hr class="noscreen" />

  </div> 
    <!-- /header -->

    <!-- Navigation -->
    <div id="nav">
    
        <ul class="box">
            <li><a href="/en">Home</a></li> <!-- Active page (highlighted) -->
            <li><a href="/en/project">Project</a></li>
            <li><a href="/en/about">About us</a></li>
            <li><a href="/en/contact">Contact</a></li>
