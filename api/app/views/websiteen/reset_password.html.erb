            <li><a href="/en/login">Login</a></li>
        </ul>
        
    <hr class="noscreen" /> 
    </div> <!-- /nav -->

    <!-- 2 columns (content + sidebar) -->
    <div id="cols" class="box">

        <!-- Content -->
      <div id="content">
        
            <h2 id="content-title">About our project:</h2>
            
            <!-- Perex -->
            <div id="perex" class="box">
              <p>
                When we started the AudioWire adventure, we wanted to build easy to use software with a handful of great features. Here's what you'll be able to do with AudioWire :</p>
            
            </div> 
            <!-- /perex -->

            <hr class="noscreen" />
            
            <div id="content-in">
                
                <!-- 3 sections -->
              <div id="sections" class="box">

                    
                
                </div> <!-- /sections -->
                
                

                <!-- Table -->
              <table width="120%" height="1439" align="left" class="nomb table-style01">
                    <tr>
                        <th height="1433" align="left" class="f-left" style="width:98%"><div align="left" id="content-in">
                          <% provide(:title, 'Sign up') %>
<h1>Reset your password</h1>

<% if @user && @user.reset_password_token == @token %>
<div class="row">
  <div class="span6 offset3">
    <%= form_for@user, :url => { :action => "reset_password" } do |f| %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <br><br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <br><br>
      <%= f.submit "Confirm", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<% else %>
Invalid token
<% end %>
                        </th>
                </tr>
              </table>
                
                <!-- Unorder list -->
                <ul class="ul-style01">
                    
              </ul>

            </div> <!-- /content-in -->
               
      </div>
      
      <!-- /content -->

        <hr class="noscreen" />

